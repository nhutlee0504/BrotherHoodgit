@code {
	private async Task DeleteProduct(int productId)
	{
		try
		{
			// Gọi API xóa sản phẩm
			var response = await HttpClient.PostAsJsonAsync($"api/products/delete/{productId}", productId);
			if (response.IsSuccessStatusCode)
			{
				// Nếu xóa thành công, cập nhật trạng thái sản phẩm trong danh sách hiển thị
				var productToDelete = userProducts.FirstOrDefault(p => p.IDProduct == productId);
				if (productToDelete != null)
				{
					productToDelete.Status = "Đã xóa";
				}
			}
			else
			{
				// Xử lý nếu API trả về lỗi
				var errorResponse = await response.Content.ReadAsStringAsync();
				Console.WriteLine($"Lỗi khi xóa sản phẩm: {errorResponse}");
			}
		}
		catch (Exception ex)
		{
			Console.WriteLine($"Lỗi xảy ra khi xóa sản phẩm: {ex.Message}");
		}
	}
}

