@page "/Admin/ThongKeNguoiDung"
@layout AdminLayout
@inject HttpClient Http

<h3 class="text-center my-4">Thống Kê Người Dùng</h3>

@if (userStatistics == null)
{
    <div class="text-center">
        <div class="spinner-border text-primary" role="status"></div>
        <p class="mt-3">Đang tải dữ liệu...</p>
    </div>
}
else
{
    <div class="container">
        <!-- Thống kê tổng quan -->
        <div class="row g-4 my-4">
            <div class="col-md-4" data-aos="fade-up" data-aos-delay="100">
                <div class="card bg-primary text-white text-center shadow-sm h-100 hover-shadow">
                    <div class="card-body">
                        <h5 class="card-title">Tổng Số Người Dùng</h5>
                        <p class="card-text fs-4 fw-bold">@userStatistics["TotalUsers"]</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4" data-aos="fade-up" data-aos-delay="200">
                <div class="card bg-success text-white text-center shadow-sm h-100 hover-shadow">
                    <div class="card-body">
                        <h5 class="card-title">Người Dùng Hoạt Động</h5>
                        <p class="card-text fs-4 fw-bold">@userStatistics["ActiveUsers"]</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4" data-aos="fade-up" data-aos-delay="300">
                <div class="card bg-danger text-white text-center shadow-sm h-100 hover-shadow">
                    <div class="card-body">
                        <h5 class="card-title">Người Dùng Đã Bị Xóa</h5>
                        <p class="card-text fs-4 fw-bold">@userStatistics["DeletedUsers"]</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

<style>
    /* Hiệu ứng hover cho card */
    .hover-shadow:hover {
        transform: scale(1.05);
        transition: all 0.3s ease;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
    }
</style>

@code {
    private Dictionary<string, int> userStatistics;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            // Gọi API để lấy dữ liệu thống kê
            userStatistics = await Http.GetFromJsonAsync<Dictionary<string, int>>("api/user/UserStatistics");
        }
        catch (Exception ex)
        {
            // Xử lý lỗi
            userStatistics = new Dictionary<string, int>
            {
                { "TotalUsers", 0 },
                { "ActiveUsers", 0 },
                { "DeletedUsers", 0 }
            };
            Console.WriteLine($"Lỗi khi gọi API: {ex.Message}");
        }
    }
}
