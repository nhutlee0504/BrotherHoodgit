@page "/Admin/ThongKeNguoiDung"
@layout AdminLayout
@inject HttpClient Http

<h3 class="text-center my-4">Thống Kê Người Dùng</h3>

@if (userStatistics == null)
{
    <div class="text-center">
        <div class="spinner-border text-primary" role="status"></div>
        <p class="mt-3">Đang tải dữ liệu...</p>
    </div>
}
else
{
    <div class="container">
        <!-- Thống kê tổng quan -->
        <div class="row g-4 my-4">
            <div class="col-md-3" data-aos="fade-up" data-aos-delay="100">
                <div class="card shadow-lg rounded h-100 stats-card">
                    <div class="card-body text-center">
                        <h5 class="card-title">Tổng Số Người Dùng</h5>
                        <p class="card-text fs-3 fw-bold text-primary">@userStatistics["TotalUsers"]</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3" data-aos="fade-up" data-aos-delay="200">
                <div class="card shadow-lg rounded h-100 stats-card">
                    <div class="card-body text-center">
                        <h5 class="card-title">Người Dùng Hoạt Động</h5>
                        <p class="card-text fs-3 fw-bold text-success">@userStatistics["ActiveUsers"]</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3" data-aos="fade-up" data-aos-delay="300">
                <div class="card shadow-lg rounded h-100 stats-card">
                    <div class="card-body text-center">
                        <h5 class="card-title">Người Dùng Đã Bị Xóa</h5>
                        <p class="card-text fs-3 fw-bold text-danger">@userStatistics["DeletedUsers"]</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3" data-aos="fade-up" data-aos-delay="400">
                <div class="card shadow-lg rounded h-100 stats-card">
                    <div class="card-body text-center">
                        <h5 class="card-title">Người Dùng Mới</h5>
                      
                    </div>
                </div>
            </div>
        </div>

        <!-- Thống kê bài viết -->
        <div class="row g-4 my-4">
            <div class="col-md-6" data-aos="fade-up" data-aos-delay="500">
                <div class="card shadow-lg rounded h-100 stats-card">
                    <div class="card-body text-center">
                        <h5 class="card-title">Bài Viết Tổng</h5>
                     
                    </div>
                </div>
            </div>
            <div class="col-md-6" data-aos="fade-up" data-aos-delay="600">
                <div class="card shadow-lg rounded h-100 stats-card">
                    <div class="card-body text-center">
                        <h5 class="card-title">Người Dùng Đang Chờ Kích Hoạt</h5>
                       
                    </div>
                </div>
            </div>
        </div>
    </div>
}

<style>
    /* Cấu hình nền cho card */
    .stats-card {
        border: none;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

    .stats-card:hover {
        transform: translateY(-10px);
        box-shadow: 0px 10px 20px rgba(0, 0, 0, 0.1);
    }

    /* Hiệu ứng cho card */
    .card-title {
        font-size: 1.5rem;
        font-weight: bold;
    }

    .card-text {
        font-size: 2rem;
        font-weight: bold;
    }

    /* Các màu sắc riêng cho từng thông số */
    .text-primary {
        color: #007bff !important;
    }

    .text-success {
        color: #28a745 !important;
    }

    .text-danger {
        color: #dc3545 !important;
    }

    .text-warning {
        color: #ffc107 !important;
    }

    .text-info {
        color: #17a2b8 !important;
    }

    .text-secondary {
        color: #6c757d !important;
    }
</style>

@code {
    private Dictionary<string, int> userStatistics;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            // Gọi API để lấy dữ liệu thống kê
            userStatistics = await Http.GetFromJsonAsync<Dictionary<string, int>>("api/user/UserStatistics");
        }
        catch (Exception ex)
        {
            // Xử lý lỗi
            userStatistics = new Dictionary<string, int>
            {
                { "TotalUsers", 0 },
                { "ActiveUsers", 0 },
                { "DeletedUsers", 0 },

            };
            Console.WriteLine($"Lỗi khi gọi API: {ex.Message}");
        }
    }
}
