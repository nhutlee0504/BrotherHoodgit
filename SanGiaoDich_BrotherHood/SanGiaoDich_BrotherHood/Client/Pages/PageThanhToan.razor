@page "/PageThanhToan"
@using System.Text.Json
@inject IJSRuntime jsruntime


@code {
    private List<PageGioHang.CartItemDto> selectedCartItems;

    protected override async Task OnInitializedAsync()
    {
        // Lấy thông tin các sản phẩm đã chọn từ local storage
        var selectedItemsJson = await jsruntime.InvokeAsync<string>("localStorage.getItem", "selectedCartItems");

        if (!string.IsNullOrEmpty(selectedItemsJson))
        {
            selectedCartItems = JsonSerializer.Deserialize<List<PageGioHang.CartItemDto>>(selectedItemsJson);
        }
    }
}


<style>
    .checkout-container {
        background-color: #f8f9fa;
    }

    .modern-input {
        border: 1px solid #28a745;
        border-radius: 0.5rem;
        background-color: #dff0d8;
        padding: 0.5rem;
    }

        .modern-input:focus {
            border-color: #28a745;
            box-shadow: 0 0 0.2rem rgba(40, 167, 69, 0.25);
        }

    .form-group {
        margin-bottom: 0.5rem;
    }

    .submit-btn {
        background-color: #28a745;
        color: white;
        border: none;
        padding: 0.5rem 2rem;
        border-radius: 0.5rem;
        cursor: pointer;
    }

        .submit-btn:hover {
            background-color: #218838;
        }

    .title {
        font-size: 2.5rem;
        font-weight: bold;
        color: #ffffff;
        text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.1);
    }

    .subtitle {
        font-size: 1.5rem;
        color: rgb(255, 255, 255);
        display: flex;
        align-items: center;
        margin-top: 1rem;
        margin-bottom: 2rem;
    }

    .icon {
        color: #ffffff;
        font-size: 1.5rem;
        margin-right: 10px;
    }

    .payment-options input[type="radio"] {
        appearance: none; /* Ẩn nút radio mặc định */
        width: 20px;
        height: 20px;
        border: 2px solid #28a745; /* Màu viền cho nút */
        border-radius: 50%; /* Định hình tròn */
        position: relative;
        outline: none;
        cursor: pointer;
    }

        .payment-options input[type="radio"]:checked {
            background-color: #28a745; /* Màu nền cho nút được chọn */
            border: 2px solid #28a745; /* Màu viền */
        }

    .payment-options label:hover {
        background-color: #f8f9fa; /* Màu nền khi hover */
        transition: background-color 0.3s; /* Hiệu ứng chuyển đổi */
    }

</style>

<div class="container-fluid">
    <ul class="breadcrumb">
        <li class="breadcrumb-item"><a href="#"><i class="bi bi-house"></i> Trang chủ</a></li>
        <li class="breadcrumb-item"><a href="#">Giỏ hàng</a></li>
        <li class="breadcrumb-item"><a href="#">Thanh toán hóa đơn</a></li>
    </ul>
</div>

<div class="checkout-container shadow container my-4 mb-5">
    <div class="row">
        <!-- User Information Section -->
        <form class="col-md-7 bg-success text-white p-4 rounded">
            <h1 class="mb-4 text-center title">Thanh toán đơn hàng</h1>
            <h2 class="subtitle">
                <i class="fas fa-user-circle icon"></i>
                Thông tin người dùng
            </h2>

            <div class="row g-3">
                <div class="col-md-6">
                    <div class="form-group">
                        <label for="username">
                            <i class="fas fa-user" style="color: #ffffff; margin-right: 10px;"></i>
                            Họ và tên
                        </label>
                        <input type="text" class="form-control modern-input" id="username" placeholder="Nhập tên">
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label for="email">
                            <i class="fas fa-envelope" style="color: #ffffff; margin-right: 10px;"></i>
                            Email
                        </label>
                        <input type="email" class="form-control modern-input" id="email" placeholder="Nhập email">
                    </div>
                </div>
                <div class="col-12">
                    <div class="form-group">
                        <label for="address">
                            <i class="fas fa-map-marker-alt" style="color: #ffffff; margin-right: 10px;"></i>
                            Địa chỉ nhận hàng
                        </label>
                        <textarea class="form-control modern-input" id="address" placeholder="Số nhà, tên đường, quận/huyện, xã/phường, tỉnh/thành phố"></textarea>
                        <a href="#" class="custom-link" style="color:white;">Tùy chỉnh</a>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label for="phone">
                            <i class="fas fa-phone" style="color: #ffffff; margin-right: 10px;"></i>
                            Số điện thoại
                        </label>
                        <input type="text" class="form-control modern-input" id="phone" placeholder="Nhập số điện thoại">
                    </div>
                </div>
   

            </div>
        </form>

        <div class="col-md-5 bg-light text-dark p-4 shadow-sm rounded">
            <h2 class="mb-4 text-success">
                <i class="fas fa-box-open" style="color: #28a745; margin-right: 10px;"></i> Thông tin sản phẩm
            </h2>
            <div class="product-info">
                <!-- Product Container -->
                <div class="product-container bg-white p-4 rounded shadow-sm mb-4">
                    <!-- Product Item -->
                    @if (selectedCartItems != null && selectedCartItems.Any())
                    {
                        @foreach (var item in selectedCartItems)
                        {
                            <div class="product-item mb-3 d-flex align-items-center border-bottom pb-3">
                                <img src="/AnhSanPham/@item.FirstImageUrl" alt="Product Image" class="img-fluid rounded" style="max-width: 90px; margin-right: 15px;">
                                <div class="product-details">
                                    <span class="product-name" style="font-weight: bolder;">@item.Product.Name</span>
                                    <div class="product-price-quantity d-flex align-items-center mt-2">
                                        <i class="fas fa-tag text-success mr-2"></i>
                                        <span class="product-price">Giá: @($"{item.Product.Price:N0} VNĐ")</span>
                                    </div>
                                    <div class="product-quantity d-flex align-items-center mt-2">
                                        <i class="fas fa-box text-success mr-2"></i>
                                        <span>Số lượng: @item.Quantity</span>
                                    </div>
                                </div>
                            </div>
                        }

                        @* <h4>Tổng cộng: @selectedCartItems.Sum(i => i.Quantity * i.Price).ToString("C")</h4> *@
                    }
                    else
                    {
                        <p>Không có sản phẩm nào được chọn để thanh toán.</p>
                    }

                </div>

                <div class="seller-info-total-amount mt-4">
                    <div class="mb-3">
                        <h6 class="text-uppercase text-secondary font-weight-bold mb-1" style="font-size: 1rem; letter-spacing: 0.05em;">
                            <i class="fas fa-store text-primary me-2"></i>Người bán
                        </h6>
                        <hr class="mt-1 mb-3" style="border-top: 1px solid #ddd;">
                    </div>
                    <div class="seller-info position-relative p-2 bg-white border rounded shadow-sm d-flex align-items-center">
                        <div class="position-relative">
                            <img src="/AnhAvatar/images (2).jpg" alt="Seller Image" class="rounded-circle me-4" style="width: 45px; height: 45px; object-fit: cover;">

                        </div>
                        <div>
                            <p class="mb-2 font-weight-bold text-dark" style="font-size: 1.1em;">
                                <i class="fas fa-user mr-2 text-primary"></i>Nguyễn Văn A  <span class="badge bg-success"s>Đối tác</span>
                            </p>
                            <p class="mb-2 text-muted">
                                <i class="fas fa-phone-alt mr-2 text-success"></i>0123-456-789
                            </p>
                            <p class="mb-0 text-muted">
                                <i class="fas fa-envelope mr-2 text-warning"></i>nguyenvana@example.com
                            </p>
                        </div>
                    </div>

                    <div class="row mt-3">
                        <div class="col-md-12">
                          
                            <h6 class="text-uppercase text-secondary font-weight-bold mb-1" style="font-size: 1rem; letter-spacing: 0.05em;">
                                <i class="fas fa-credit-card mr-2"></i> Hình thức thanh toán
                            </h6>
                            <hr class="mt-1 mb-3" style="border-top: 1px solid #ddd;">
                            <div class="payment-method bg-light p-3 rounded shadow-sm">
                                <div class="payment-options">
                                    <label class="d-flex align-items-center mb-2">
                                        <input type="radio" name="payment" class="form-check-input" checked>
                                        <span class="ml-2">Thanh toán bằng tiền mặt</span>
                                    </label>
                                    <p class="text-muted ml-4" style="font-size: 0.9em;">
                                        Bạn sẽ thanh toán trực tiếp cho người giao hàng khi nhận hàng.
                                    </p>

                                    <label class="d-flex align-items-center mb-2">
                                        <input type="radio" name="payment" class="form-check-input">
                                        <span class="ml-2">Thanh toán qua chuyển khoản</span>
                                    </label>
                                    <p class="text-muted ml-4" style="font-size: 0.9em;">
                                        Bạn có thể chuyển khoản qua ngân hàng theo thông tin tài khoản mà chúng tôi cung cấp.
                                    </p>

                                    <label class="d-flex align-items-center mb-2">
                                        <input type="radio" name="payment" class="form-check-input">
                                        <span class="ml-2">Thanh toán qua ví VnPay</span>
                                    </label>
                                    <p class="text-muted ml-4" style="font-size: 0.9em;">
                                        Thanh toán nhanh chóng và an toàn qua ví điện tử VnPay. Đảm bảo an toàn thông tin.
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Total Amount Section -->
                    <div class="total-amount mt-3 p-3 rounded bg-light shadow-sm" style="border: 1px solid #ddd;">
                        <h4 class="text-dark font-weight-bold mb-3 text-center">
                            <i class="fas fa-wallet text-success me-2" style="font-size: 1.5em;"></i> Tổng tiền
                        </h4>
                        <div class="d-flex justify-content-between mb-2">
                            <span class="text-dark">Giá sản phẩm:</span>
                            <span class="font-weight-bold">1.000.000 VND</span>
                        </div>
                        <div class="d-flex justify-content-between mb-2">
                            <span class="text-dark">Thuế (10%):</span>
                            <span class="font-weight-bold">100.000 VND</span>
                        </div>
                        <div class="d-flex justify-content-between mb-2">
                            <span class="text-dark">Vận chuyển:</span>
                            <span class="font-weight-bold">20.000 VND</span>
                        </div>
                        <hr class="bg-success mt-2" style="height: 2px; border-radius: 5px;">
                        <div class="d-flex justify-content-between">
                            <span class="text-danger font-weight-bold" style="font-size: 1.5em;">Tổng cộng:</span>
                            <span class="text-danger font-weight-bold" style="font-size: 1.5em;">1.120.000 VND</span>
                        </div>
                    </div>





            </div>

            <!-- Submit Button -->
            <div class="text-center mt-4">
                <button class="submit-btn btn btn-success font-weight-bold">
                    <i class="fas fa-shopping-cart mr-2"></i> Đặt hàng
                </button>
            </div>
        </div>
        
    </div>
    </div>
</div>
