                    {
                        @foreach (var item in selectedCartItems)
                        {
                            <div class="product-item mb-3 d-flex align-items-center border-bottom pb-3">
                                <img src="~/AnhSanPham/@item.ImageUrl" alt="Product Image" class="img-fluid rounded" style="max-width: 90px; margin-right: 15px;">
