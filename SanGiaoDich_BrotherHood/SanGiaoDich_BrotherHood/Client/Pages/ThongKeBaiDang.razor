@page "/Admin/ThongKe"
@layout AdminLayout

@using System.Net.Http.Json
@using System.Collections.Generic

@inject HttpClient Http

@code {
    private List<StatisticDto> statistics = new List<StatisticDto>();
    private string errorMessage;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            // Gọi API lấy dữ liệu thống kê
            var response = await Http.GetFromJsonAsync<List<StatisticDto>>("api/Product/StatisticsByStatus");
            if (response != null)
            {
                statistics = response;
            }
        }
        catch (Exception ex)
        {
            errorMessage = "Đã xảy ra lỗi khi tải dữ liệu thống kê.";
        }
    }

    public class StatisticDto
    {
        public string Status { get; set; }
        public int Count { get; set; }
    }
}

<div class="container mt-5">
    <h1 class="text-center mb-4">Thống Kê</h1>

    @* <!-- Bộ lọc (Không bắt buộc để hiển thị thông tin ngay lập tức) -->
