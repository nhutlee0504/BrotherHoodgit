        }

        .card-body:hover i {
            transform: scale(1.1);
        }

        .card-body h5 {
            font-size: 1.6rem;
            font-weight: 600;
        }

        .card-body p {
            font-size: 2.2rem;
            font-weight: 600;
        }

    .card {
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
    }

